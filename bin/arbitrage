#!/usr/bin/env python3

import sys
import argparse
from os.path import realpath, dirname, join

ROOT_DIR = realpath(join(dirname(__file__), '..'))
sys.path.append(ROOT_DIR)

from app.controller.service import ServiceController


def main():
    args = parse_args()
    service = ServiceController()

    service.run_service(source_cx=args.cx_source, target_cx=args.cx_target, refresh=args.refresh)


def parse_args():
    parser = argparse.ArgumentParser()
    parser.add_argument('cx_source', action='store', type=str,
                        metavar='SRC_EXCHANGE', help='exchange name')
    parser.add_argument('cx_target', action='store', type=str,
                        metavar='TARGET_EXCHANGE', help='exchange name')
    parser.add_argument('--refresh', action='store_true', default=False,
                        help='refresh local data files')

    return parser.parse_args()


if __name__ == '__main__':
    main()
